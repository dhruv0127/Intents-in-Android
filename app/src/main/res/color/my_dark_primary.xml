<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:color="#EDEDF3">
        <shape android:shape="rectangle">
            <solid android:color="#ECECF0"/> <!-- Change the color code to your desired color -->
        </shape>
    </item>
    <item android:color="#D7DBEF">
        <shape android:shape="rectangle">
            <solid android:color="#EBECF3"/> <!-- Default or non-pressed state color -->
        </shape>
    </item>
</selector>

